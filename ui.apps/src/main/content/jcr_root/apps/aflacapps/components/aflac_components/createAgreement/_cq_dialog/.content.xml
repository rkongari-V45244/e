<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Create an Agreement"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <processargs
                jcr:primaryType="nt:unstructured"
                jcr:title="Arguments"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <arguments
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Please specify your requirements"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <docListVariable
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="INPUT - Enter the name of the variable (type = List&lt;document>) which will store list of documents."
                                        name="./metaData/docListVariableName"
                                        required="{Boolean}true"/>
                                    <formIdListVariable
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" INPUT - Enter the name of the variable (type = List&lt;String>) which will store formIds."
                                        name="./metaData/formIdsVarName"
                                        required="{Boolean}true"/>
                                    <agreementIdVarName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Enter the name of the variable &lt;type = string> which will store agreement Id."
                                        name="./metaData/agreementIdVarName"
                                        required="{Boolean}true"/>
                                    <signerEmailVarName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Enter the name of the variable &lt;type = string> which contains signer email address."
                                        name="./metaData/signerEmailVarName"
                                        required="{Boolean}true"/>
                                    <name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Enter the name of the agreement."
                                        name="./metaData/AgreementName"
                                        required="{Boolean}true"/>
                                    <role
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Enter the role of a recipient."
                                        name="./metaData/role"
                                        required="{Boolean}true"/>
                                    <signatureFlow
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel=" Enter the signature Flow."
                                        name="./metaData/signatureFlow"
                                        required="{Boolean}true"/>
                                    <formXmlData
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="INPUT - Please enter MasterApp xml data"
                                        name="./metaData/formXmlData"
                                        required="{Boolean}true"/>
                                </items>
                            </arguments>
                        </items>
                    </column>
                </items>
            </processargs>
            <common
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"/>
            <process
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"/>
        </items>
    </content>
</jcr:root>
